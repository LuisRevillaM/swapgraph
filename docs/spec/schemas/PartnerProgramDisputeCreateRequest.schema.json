{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/PartnerProgramDisputeCreateRequest.schema.json",
  "title": "PartnerProgramDisputeCreateRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "dispute_type",
    "severity",
    "subject_ref",
    "reason_code",
    "evidence_items"
  ],
  "properties": {
    "dispute_type": {
      "type": "string",
      "enum": [
        "delivery",
        "billing",
        "sla"
      ]
    },
    "severity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "subject_ref": {
      "type": "string",
      "minLength": 1
    },
    "reason_code": {
      "type": "string",
      "minLength": 1
    },
    "opened_at": {
      "type": "string",
      "format": "date-time"
    },
    "evidence_items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "evidence_id",
          "kind",
          "content_hash",
          "metadata"
        ],
        "properties": {
          "evidence_id": {
            "type": "string",
            "minLength": 1
          },
          "kind": {
            "type": "string",
            "minLength": 1
          },
          "content_hash": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    }
  }
}
