{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/CrossAdapterCompensationCaseUpdateRequest.schema.json",
  "title": "CrossAdapterCompensationCaseUpdateRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "case_update"
  ],
  "properties": {
    "case_update": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "case_id",
        "next_status"
      ],
      "properties": {
        "case_id": {
          "type": "string",
          "minLength": 1
        },
        "next_status": {
          "type": "string",
          "enum": [
            "open",
            "approved",
            "rejected",
            "resolved"
          ]
        },
        "decision_reason_code": {
          "type": "string",
          "minLength": 1
        },
        "approved_amount_usd_micros": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000000000000
        },
        "resolution_reference": {
          "type": "string",
          "minLength": 1
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "next_status": {
                "const": "approved"
              }
            }
          },
          "then": {
            "properties": {
              "decision_reason_code": {
                "type": "string",
                "minLength": 1
              },
              "approved_amount_usd_micros": {
                "type": "integer",
                "minimum": 1,
                "maximum": 1000000000000
              }
            },
            "required": [
              "decision_reason_code",
              "approved_amount_usd_micros"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "next_status": {
                "const": "rejected"
              }
            }
          },
          "then": {
            "properties": {
              "decision_reason_code": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "decision_reason_code"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "next_status": {
                "const": "resolved"
              }
            }
          },
          "then": {
            "properties": {
              "resolution_reference": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "resolution_reference"
            ]
          }
        }
      ]
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
