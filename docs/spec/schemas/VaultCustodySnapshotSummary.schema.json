{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/VaultCustodySnapshotSummary.schema.json",
  "title": "VaultCustodySnapshotSummary",
  "type": "object",
  "additionalProperties": false,
  "required": ["snapshot_id", "recorded_at", "leaf_count", "root_hash"],
  "properties": {
    "snapshot_id": { "type": "string", "minLength": 1 },
    "recorded_at": { "type": "string", "format": "date-time" },
    "leaf_count": { "type": "integer", "minimum": 0 },
    "root_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  }
}
