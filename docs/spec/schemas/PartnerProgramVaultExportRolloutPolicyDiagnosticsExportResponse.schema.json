{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/PartnerProgramVaultExportRolloutPolicyDiagnosticsExportResponse.schema.json",
  "title": "PartnerProgramVaultExportRolloutPolicyDiagnosticsExportResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "exported_at",
    "query",
    "policy",
    "overlays",
    "lifecycle_signals",
    "alerts",
    "recommended_actions",
    "runbook_hooks",
    "export_hash",
    "signature"
  ],
  "properties": {
    "correlation_id": { "type": "string", "minLength": 1 },
    "exported_at": { "type": "string", "format": "date-time" },
    "query": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "now_iso": { "type": "string", "format": "date-time" },
        "exported_at_iso": { "type": "string", "format": "date-time" },
        "include_recommended_actions": { "type": "boolean" },
        "include_runbook_hooks": { "type": "boolean" },
        "include_automation_hints": { "type": "boolean" },
        "maintenance_stale_after_minutes": { "type": "integer", "minimum": 1, "maximum": 10080 },
        "freeze_expiring_soon_minutes": { "type": "integer", "minimum": 1, "maximum": 10080 },
        "automation_max_actions": { "type": "integer", "minimum": 1, "maximum": 10 },
        "attestation_after": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "checkpoint_after": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    },
    "policy": { "$ref": "PartnerProgramVaultExportRolloutPolicyView.schema.json" },
    "overlays": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "partner_program_enforced",
        "settlement_export_checkpoint_enforced",
        "settlement_export_checkpoint_retention_days",
        "rollout_policy_audit_checkpoint_enforced",
        "rollout_policy_audit_checkpoint_retention_days",
        "rollout_policy_diagnostics_checkpoint_enforced",
        "rollout_policy_diagnostics_checkpoint_retention_days",
        "freeze_export_enforced",
        "admin_allowlist"
      ],
      "properties": {
        "partner_program_enforced": { "type": "boolean" },
        "settlement_export_checkpoint_enforced": { "type": "boolean" },
        "settlement_export_checkpoint_retention_days": { "type": "integer", "minimum": 1 },
        "rollout_policy_audit_checkpoint_enforced": { "type": "boolean" },
        "rollout_policy_audit_checkpoint_retention_days": { "type": "integer", "minimum": 1 },
        "rollout_policy_diagnostics_checkpoint_enforced": { "type": "boolean" },
        "rollout_policy_diagnostics_checkpoint_retention_days": { "type": "integer", "minimum": 1 },
        "freeze_export_enforced": { "type": "boolean" },
        "admin_allowlist": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "lifecycle_signals": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "maintenance_mode_age_minutes",
        "freeze_window_remaining_minutes",
        "freeze_window_remaining_bucket"
      ],
      "properties": {
        "maintenance_mode_age_minutes": { "type": ["integer", "null"], "minimum": 0 },
        "freeze_window_remaining_minutes": { "type": ["integer", "null"] },
        "freeze_window_remaining_bucket": {
          "type": "string",
          "enum": ["none", "expired", "critical", "warning", "stable"]
        }
      }
    },
    "alerts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "severity", "reason_code", "details"],
        "properties": {
          "code": {
            "type": "string",
            "enum": ["maintenance_mode_stale", "freeze_window_expiring_soon"]
          },
          "severity": {
            "type": "string",
            "enum": ["info", "warning"]
          },
          "reason_code": {
            "type": "string",
            "enum": ["maintenance_mode_active", "freeze_window_active"]
          },
          "details": { "type": "object" }
        }
      }
    },
    "automation_hints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["requires_operator_confirmation", "source_alert_codes", "action_queue", "action_requests", "plan_hash", "safety"],
      "properties": {
        "requires_operator_confirmation": { "type": "boolean" },
        "source_alert_codes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["maintenance_mode_stale", "freeze_window_expiring_soon"]
          }
        },
        "action_queue": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["hook_id", "reason_code", "priority"],
            "properties": {
              "hook_id": {
                "type": "string",
                "enum": ["disable_maintenance_mode", "clear_freeze_window", "clear_controls", "observe_only"]
              },
              "reason_code": {
                "type": "string",
                "enum": ["maintenance_mode_active", "freeze_window_active", "no_action_required"]
              },
              "priority": {
                "type": "string",
                "enum": ["high", "normal"]
              }
            }
          }
        },
        "action_requests": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["step", "hook_id", "operation_id", "idempotency_key_template", "request_hash", "request"],
            "properties": {
              "step": { "type": "integer", "minimum": 1 },
              "hook_id": {
                "type": "string",
                "enum": ["disable_maintenance_mode", "clear_freeze_window", "clear_controls", "observe_only"]
              },
              "operation_id": {
                "type": "string",
                "const": "partnerProgram.vault_export.rollout_policy.admin_action"
              },
              "idempotency_key_template": { "type": "string", "minLength": 1 },
              "request_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
              "request": {
                "type": "object",
                "additionalProperties": false,
                "required": ["action"],
                "properties": {
                  "action": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["action_type"],
                    "properties": {
                      "action_type": {
                        "type": "string",
                        "enum": ["set_maintenance_mode", "set_freeze_window", "clear_controls", "observe"]
                      },
                      "maintenance_mode_enabled": { "type": "boolean" },
                      "maintenance_reason_code": { "type": ["string", "null"], "minLength": 1 },
                      "freeze_until": { "type": ["string", "null"], "format": "date-time" },
                      "freeze_reason_code": { "type": ["string", "null"], "minLength": 1 }
                    }
                  }
                }
              }
            }
          }
        },
        "plan_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "safety": {
          "type": "object",
          "additionalProperties": false,
          "required": ["idempotency_required", "idempotency_scope", "max_actions_per_run"],
          "properties": {
            "idempotency_required": { "type": "boolean" },
            "idempotency_scope": {
              "type": "string",
              "const": "partnerProgram.vault_export.rollout_policy.admin_action"
            },
            "max_actions_per_run": { "type": "integer", "minimum": 1, "maximum": 10 }
          }
        }
      }
    },
    "recommended_actions": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "reason_code", "runbook_hook_id", "details"],
        "properties": {
          "code": {
            "type": "string",
            "enum": ["clear_maintenance_mode", "clear_freeze_window", "none"]
          },
          "reason_code": {
            "type": "string",
            "enum": ["maintenance_mode_active", "freeze_window_active", "no_action_required"]
          },
          "runbook_hook_id": {
            "type": "string",
            "enum": ["disable_maintenance_mode", "clear_freeze_window", "observe_only"]
          },
          "details": { "type": "object" }
        }
      }
    },
    "runbook_hooks": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["hook_id", "operation_id", "action"],
        "properties": {
          "hook_id": {
            "type": "string",
            "enum": ["disable_maintenance_mode", "clear_freeze_window", "clear_controls", "observe_only"]
          },
          "operation_id": { "type": "string", "minLength": 1 },
          "action": {
            "type": "object",
            "additionalProperties": false,
            "required": ["action_type"],
            "properties": {
              "action_type": {
                "type": "string",
                "enum": ["set_maintenance_mode", "set_freeze_window", "clear_controls", "observe"]
              },
              "maintenance_mode_enabled": { "type": "boolean" },
              "maintenance_reason_code": { "type": ["string", "null"], "minLength": 1 },
              "freeze_until": { "type": ["string", "null"], "format": "date-time" },
              "freeze_reason_code": { "type": ["string", "null"], "minLength": 1 }
            }
          }
        }
      }
    },
    "attestation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cursor_after", "next_cursor", "attestation_after", "page_hash", "chain_hash"],
      "properties": {
        "cursor_after": {
          "type": ["string", "null"],
          "pattern": "^rollout_policy_[0-9]{6}$"
        },
        "next_cursor": {
          "type": ["string", "null"],
          "pattern": "^rollout_policy_[0-9]{6}$"
        },
        "attestation_after": {
          "type": ["string", "null"],
          "pattern": "^[a-f0-9]{64}$"
        },
        "page_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "chain_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    },
    "checkpoint": {
      "type": "object",
      "additionalProperties": false,
      "required": ["checkpoint_after", "attestation_chain_hash", "next_cursor", "entries_count", "total_filtered", "checkpoint_hash"],
      "properties": {
        "checkpoint_after": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "attestation_chain_hash": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "next_cursor": {
          "type": ["string", "null"],
          "pattern": "^rollout_policy_[0-9]{6}$"
        },
        "entries_count": { "type": "integer", "minimum": 0 },
        "total_filtered": { "type": "integer", "minimum": 0 },
        "checkpoint_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      }
    },
    "export_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "signature": { "$ref": "EventSignature.schema.json" }
  }
}
