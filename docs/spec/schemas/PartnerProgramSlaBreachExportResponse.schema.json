{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/PartnerProgramSlaBreachExportResponse.schema.json",
  "title": "PartnerProgramSlaBreachExportResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "exported_at",
    "query",
    "policy",
    "summary",
    "events",
    "export_hash",
    "signature"
  ],
  "properties": {
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "exported_at": {
      "type": "string",
      "format": "date-time"
    },
    "query": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "include_resolved",
        "exported_at_iso"
      ],
      "properties": {
        "from_iso": {
          "type": "string",
          "format": "date-time"
        },
        "to_iso": {
          "type": "string",
          "format": "date-time"
        },
        "include_resolved": {
          "type": "boolean"
        },
        "now_iso": {
          "type": "string",
          "format": "date-time"
        },
        "exported_at_iso": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "policy": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "required": [
        "partner_id",
        "version",
        "updated_at",
        "latency_p95_ms",
        "availability_target_bps",
        "dispute_response_minutes",
        "breach_threshold_minutes"
      ],
      "properties": {
        "partner_id": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "latency_p95_ms": {
          "type": "integer",
          "minimum": 1
        },
        "availability_target_bps": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10000
        },
        "dispute_response_minutes": {
          "type": "integer",
          "minimum": 1
        },
        "breach_threshold_minutes": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total_events",
        "open_events",
        "high_severity_events"
      ],
      "properties": {
        "total_events": {
          "type": "integer",
          "minimum": 0
        },
        "open_events": {
          "type": "integer",
          "minimum": 0
        },
        "high_severity_events": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "event_id",
          "partner_id",
          "event_type",
          "severity",
          "reason_code",
          "occurred_at",
          "resolved",
          "resolved_at",
          "metadata"
        ],
        "properties": {
          "event_id": {
            "type": "string",
            "minLength": 1
          },
          "partner_id": {
            "type": "string",
            "minLength": 1
          },
          "event_type": {
            "type": "string",
            "enum": [
              "latency",
              "availability",
              "dispute_response"
            ]
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "reason_code": {
            "type": "string",
            "minLength": 1
          },
          "occurred_at": {
            "type": "string",
            "format": "date-time"
          },
          "resolved": {
            "type": "boolean"
          },
          "resolved_at": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time"
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    },
    "export_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "key_id",
        "alg",
        "sig"
      ],
      "properties": {
        "key_id": {
          "type": "string",
          "minLength": 1
        },
        "alg": {
          "type": "string",
          "enum": [
            "ed25519"
          ]
        },
        "sig": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
