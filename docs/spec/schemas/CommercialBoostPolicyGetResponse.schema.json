{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/CommercialBoostPolicyGetResponse.schema.json",
  "title": "CommercialBoostPolicyGetResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["correlation_id", "policy"],
  "properties": {
    "correlation_id": { "type": "string", "minLength": 1 },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "partner_id",
        "version",
        "enabled",
        "max_multiplier",
        "allow_safety_bypass",
        "allow_trust_bypass",
        "allow_settlement_constraint_bypass",
        "updated_at",
        "updated_by"
      ],
      "properties": {
        "partner_id": { "type": "string", "minLength": 1 },
        "version": { "type": "integer", "minimum": 1 },
        "enabled": { "type": "boolean" },
        "max_multiplier": { "type": "number", "minimum": 1, "maximum": 5 },
        "allow_safety_bypass": { "type": "boolean" },
        "allow_trust_bypass": { "type": "boolean" },
        "allow_settlement_constraint_bypass": { "type": "boolean" },
        "updated_at": { "type": "string", "format": "date-time" },
        "updated_by": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "id"],
          "properties": {
            "type": { "type": "string", "enum": ["partner"] },
            "id": { "type": "string", "minLength": 1 }
          }
        }
      }
    }
  }
}
