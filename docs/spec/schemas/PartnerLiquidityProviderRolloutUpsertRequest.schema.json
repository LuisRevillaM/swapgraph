{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/PartnerLiquidityProviderRolloutUpsertRequest.schema.json",
  "title": "PartnerLiquidityProviderRolloutUpsertRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "rollout"
  ],
  "properties": {
    "rollout": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "rollout_status",
        "effective_segment_tier",
        "capability_matrix"
      ],
      "properties": {
        "rollout_status": {
          "type": "string",
          "enum": [
            "active",
            "paused",
            "blocked"
          ]
        },
        "effective_segment_tier": {
          "type": "string",
          "enum": [
            "S0",
            "S1",
            "S2",
            "S3"
          ]
        },
        "capability_matrix": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "capability",
              "min_segment_tier",
              "enabled"
            ],
            "properties": {
              "capability": {
                "type": "string",
                "minLength": 1
              },
              "min_segment_tier": {
                "type": "string",
                "enum": [
                  "S0",
                  "S1",
                  "S2",
                  "S3"
                ]
              },
              "enabled": {
                "type": "boolean"
              }
            }
          }
        },
        "reason_codes": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      }
    },
    "recorded_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
