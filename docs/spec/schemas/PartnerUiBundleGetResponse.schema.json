{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/PartnerUiBundleGetResponse.schema.json",
  "title": "PartnerUiBundleGetResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "surface_bundle"
  ],
  "properties": {
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "surface_bundle": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "surface",
        "version",
        "integration_modes",
        "locale",
        "payload"
      ],
      "properties": {
        "surface": {
          "type": "string",
          "enum": [
            "intent-composer",
            "cycle-proposal-cards",
            "settlement-checklist",
            "receipt-renderer"
          ]
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "integration_modes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "api_only",
              "embedded_ui"
            ]
          },
          "uniqueItems": true
        },
        "locale": {
          "type": "string",
          "minLength": 1
        },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "title",
            "description",
            "required_operations"
          ],
          "properties": {
            "title": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "minLength": 1
            },
            "required_operations": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    }
  }
}
