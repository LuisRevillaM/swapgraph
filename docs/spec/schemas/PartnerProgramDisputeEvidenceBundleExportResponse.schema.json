{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/PartnerProgramDisputeEvidenceBundleExportResponse.schema.json",
  "title": "PartnerProgramDisputeEvidenceBundleExportResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "exported_at",
    "query",
    "summary",
    "bundles",
    "export_hash",
    "signature"
  ],
  "properties": {
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "exported_at": {
      "type": "string",
      "format": "date-time"
    },
    "query": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "include_resolved",
        "limit",
        "exported_at_iso"
      ],
      "properties": {
        "from_iso": {
          "type": "string",
          "format": "date-time"
        },
        "to_iso": {
          "type": "string",
          "format": "date-time"
        },
        "include_resolved": {
          "type": "boolean"
        },
        "limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200
        },
        "cursor_after": {
          "type": "string",
          "minLength": 1
        },
        "now_iso": {
          "type": "string",
          "format": "date-time"
        },
        "exported_at_iso": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total_disputes",
        "open_disputes",
        "resolved_disputes",
        "total_evidence_items",
        "returned_count"
      ],
      "properties": {
        "total_disputes": {
          "type": "integer",
          "minimum": 0
        },
        "open_disputes": {
          "type": "integer",
          "minimum": 0
        },
        "resolved_disputes": {
          "type": "integer",
          "minimum": 0
        },
        "total_evidence_items": {
          "type": "integer",
          "minimum": 0
        },
        "returned_count": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "bundles": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "evidence_bundle_id",
          "dispute_id",
          "partner_id",
          "dispute_type",
          "severity",
          "subject_ref",
          "reason_code",
          "status",
          "opened_at",
          "resolved_at",
          "resolution",
          "evidence_items"
        ],
        "properties": {
          "evidence_bundle_id": {
            "type": "string",
            "minLength": 1
          },
          "dispute_id": {
            "type": "string",
            "minLength": 1
          },
          "partner_id": {
            "type": "string",
            "minLength": 1
          },
          "dispute_type": {
            "type": "string",
            "enum": [
              "delivery",
              "billing",
              "sla"
            ]
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "subject_ref": {
            "type": "string",
            "minLength": 1
          },
          "reason_code": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "open",
              "resolved"
            ]
          },
          "opened_at": {
            "type": "string",
            "format": "date-time"
          },
          "resolved_at": {
            "type": [
              "string",
              "null"
            ],
            "format": "date-time"
          },
          "resolution": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "code"
                ],
                "properties": {
                  "code": {
                    "type": "string",
                    "minLength": 1
                  },
                  "notes": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            ]
          },
          "evidence_items": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "evidence_id",
                "kind",
                "content_hash",
                "metadata"
              ],
              "properties": {
                "evidence_id": {
                  "type": "string",
                  "minLength": 1
                },
                "kind": {
                  "type": "string",
                  "minLength": 1
                },
                "content_hash": {
                  "type": "string",
                  "pattern": "^[a-f0-9]{64}$"
                },
                "metadata": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "next_cursor": {
      "type": "string",
      "minLength": 1
    },
    "export_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "key_id",
        "alg",
        "sig"
      ],
      "properties": {
        "key_id": {
          "type": "string",
          "minLength": 1
        },
        "alg": {
          "type": "string",
          "enum": [
            "ed25519"
          ]
        },
        "sig": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
