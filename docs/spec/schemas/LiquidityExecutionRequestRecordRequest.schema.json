{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/LiquidityExecutionRequestRecordRequest.schema.json",
  "title": "LiquidityExecutionRequestRecordRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "execution_request"
  ],
  "properties": {
    "execution_request": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "action_type",
        "risk_class",
        "reason_codes",
        "correlation_id"
      ],
      "properties": {
        "request_id": {
          "type": "string",
          "minLength": 1
        },
        "proposal_id": {
          "type": "string",
          "minLength": 1
        },
        "cycle_id": {
          "type": "string",
          "minLength": 1
        },
        "intent_ids": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "action_type": {
          "type": "string",
          "enum": [
            "settlement_execute",
            "settlement_cancel",
            "settlement_retry",
            "inventory_release"
          ]
        },
        "risk_class": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ]
        },
        "reason_codes": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "correlation_id": {
          "type": "string",
          "minLength": 1
        },
        "requested_at": {
          "type": "string",
          "format": "date-time"
        },
        "auto_execute": {
          "type": "boolean"
        },
        "platform_policy_blocked": {
          "type": "boolean"
        },
        "metadata": {
          "type": "object"
        }
      }
    }
  }
}
