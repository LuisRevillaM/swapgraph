{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/SettlementStateTransitionView.schema.json",
  "title": "SettlementStateTransitionView",
  "type": "object",
  "additionalProperties": false,
  "required": ["occurred_at", "from_state", "to_state", "reason_code"],
  "properties": {
    "occurred_at": { "type": "string", "format": "date-time" },
    "from_state": {
      "type": "string",
      "enum": [
        "proposed",
        "accepted",
        "escrow.pending",
        "escrow.ready",
        "executing",
        "completed",
        "failed"
      ]
    },
    "to_state": {
      "type": "string",
      "enum": [
        "proposed",
        "accepted",
        "escrow.pending",
        "escrow.ready",
        "executing",
        "completed",
        "failed"
      ]
    },
    "reason_code": { "type": ["string", "null"] }
  }
}
