{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/LiquiditySimulationCycleEntry.schema.json",
  "title": "LiquiditySimulationCycleEntry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "cycle_id",
    "simulation",
    "simulation_session_id",
    "completed_at",
    "confidence_score",
    "participants"
  ],
  "properties": {
    "cycle_id": {
      "type": "string",
      "minLength": 1
    },
    "simulation": {
      "type": "boolean",
      "const": true
    },
    "simulation_session_id": {
      "type": "string",
      "minLength": 1
    },
    "completed_at": {
      "type": "string",
      "format": "date-time"
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "participants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "intent_id",
          "actor"
        ],
        "properties": {
          "intent_id": {
            "type": "string",
            "minLength": 1
          },
          "actor": {
            "$ref": "ActorRef.schema.json"
          },
          "liquidity_provider_ref": {
            "$ref": "LiquidityProviderRef.schema.json"
          },
          "persona_ref": {
            "$ref": "BotPersonaRef.schema.json"
          },
          "liquidity_policy_ref": {
            "$ref": "LiquidityPolicyRef.schema.json"
          }
        }
      }
    }
  }
}
