{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/TrustSafetyDecisionRecordRequest.schema.json",
  "title": "TrustSafetyDecisionRecordRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "decision"
  ],
  "properties": {
    "decision": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "subject_actor_type",
        "subject_actor_id",
        "decision",
        "reason_codes",
        "contributing_signal_ids",
        "severity",
        "confidence_score_bps",
        "recorded_at"
      ],
      "properties": {
        "decision_id": {
          "type": "string",
          "minLength": 1
        },
        "subject_actor_type": {
          "type": "string",
          "enum": [
            "partner",
            "user"
          ]
        },
        "subject_actor_id": {
          "type": "string",
          "minLength": 1
        },
        "decision": {
          "type": "string",
          "enum": [
            "allow",
            "manual_review",
            "block"
          ]
        },
        "reason_codes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "contributing_signal_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "severity": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ]
        },
        "confidence_score_bps": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10000
        },
        "recorded_at": {
          "type": "string",
          "format": "date-time"
        },
        "correlation_id": {
          "type": "string",
          "minLength": 1
        },
        "dispute_id": {
          "type": "string",
          "minLength": 1
        },
        "reliability_ref": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
