{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/DisputeCompensationLinkageUpdateRequest.schema.json",
  "title": "DisputeCompensationLinkageUpdateRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "linkage_update"
  ],
  "properties": {
    "linkage_update": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "linkage_id",
        "next_status"
      ],
      "properties": {
        "linkage_id": {
          "type": "string",
          "minLength": 1
        },
        "next_status": {
          "type": "string",
          "enum": [
            "linked",
            "compensation_recorded",
            "closed"
          ]
        },
        "ledger_entry_id": {
          "type": "string",
          "minLength": 1
        },
        "decision_reason_code": {
          "type": "string",
          "minLength": 1
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "next_status": {
                "const": "compensation_recorded"
              }
            }
          },
          "then": {
            "properties": {
              "ledger_entry_id": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "ledger_entry_id"
            ]
          }
        }
      ]
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
