{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/OAuthClientRegisterRequest.schema.json",
  "title": "OAuthClientRegisterRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "client_name",
    "redirect_uris",
    "scopes"
  ],
  "properties": {
    "client_name": {
      "type": "string",
      "minLength": 1
    },
    "redirect_uris": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "scopes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
