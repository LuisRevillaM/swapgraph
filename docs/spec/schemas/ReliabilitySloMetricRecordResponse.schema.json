{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/ReliabilitySloMetricRecordResponse.schema.json",
  "title": "ReliabilitySloMetricRecordResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "metric",
    "replayed"
  ],
  "properties": {
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "metric": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "metric_id",
        "partner_id",
        "service_id",
        "window_start_at",
        "window_end_at",
        "target_availability_bps",
        "observed_availability_bps",
        "target_p95_latency_ms",
        "observed_p95_latency_ms",
        "error_budget_consumed_bps",
        "request_count",
        "passing",
        "breach_reasons",
        "integration_mode",
        "recorded_at"
      ],
      "properties": {
        "metric_id": {
          "type": "string",
          "minLength": 1
        },
        "partner_id": {
          "type": "string",
          "minLength": 1
        },
        "service_id": {
          "type": "string",
          "minLength": 1
        },
        "window_start_at": {
          "type": "string",
          "format": "date-time"
        },
        "window_end_at": {
          "type": "string",
          "format": "date-time"
        },
        "target_availability_bps": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10000
        },
        "observed_availability_bps": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10000
        },
        "target_p95_latency_ms": {
          "type": "integer",
          "minimum": 1,
          "maximum": 120000
        },
        "observed_p95_latency_ms": {
          "type": "integer",
          "minimum": 1,
          "maximum": 120000
        },
        "error_budget_consumed_bps": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10000
        },
        "request_count": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1000000000
        },
        "passing": {
          "type": "boolean"
        },
        "breach_reasons": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "availability_below_target",
              "latency_above_target",
              "error_budget_exhausted"
            ]
          }
        },
        "integration_mode": {
          "type": "string",
          "enum": [
            "fixture_only"
          ]
        },
        "recorded_at": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "replayed": {
      "type": "boolean"
    }
  }
}
