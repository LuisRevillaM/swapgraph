{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/InventorySnapshotRecordResponse.schema.json",
  "title": "InventorySnapshotRecordResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "snapshot"
  ],
  "properties": {
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "snapshot": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "snapshot_id",
        "partner_id",
        "platform",
        "captured_at",
        "recorded_at",
        "assets"
      ],
      "properties": {
        "snapshot_id": {
          "type": "string",
          "minLength": 1
        },
        "partner_id": {
          "type": "string",
          "minLength": 1
        },
        "platform": {
          "type": "string",
          "minLength": 1
        },
        "captured_at": {
          "type": "string",
          "format": "date-time"
        },
        "recorded_at": {
          "type": "string",
          "format": "date-time"
        },
        "assets": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "asset_id",
              "quantity",
              "metadata"
            ],
            "properties": {
              "asset_id": {
                "type": "string",
                "minLength": 1
              },
              "quantity": {
                "type": "integer",
                "minimum": 1
              },
              "metadata": {
                "type": "object"
              }
            }
          }
        }
      }
    }
  }
}
