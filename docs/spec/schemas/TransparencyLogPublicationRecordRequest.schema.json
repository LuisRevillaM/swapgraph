{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/TransparencyLogPublicationRecordRequest.schema.json",
  "title": "TransparencyLogPublicationRecordRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "publication",
    "published_at"
  ],
  "properties": {
    "publication": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "source_type",
        "source_ref",
        "root_hash",
        "entry_count",
        "artifact_refs",
        "linked_receipt_ids",
        "linked_governance_artifact_ids"
      ],
      "properties": {
        "source_type": {
          "type": "string",
          "enum": [
            "settlement_receipts",
            "governance_rollout",
            "partner_disputes",
            "combined"
          ]
        },
        "source_ref": {
          "type": "string",
          "minLength": 1
        },
        "root_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "previous_root_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "entry_count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000000
        },
        "artifact_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "linked_receipt_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "linked_governance_artifact_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      },
      "anyOf": [
        {
          "properties": {
            "linked_receipt_ids": {
              "type": "array",
              "minItems": 1
            }
          }
        },
        {
          "properties": {
            "linked_governance_artifact_ids": {
              "type": "array",
              "minItems": 1
            }
          }
        }
      ]
    },
    "published_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
