{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/SteamTier1AdapterPreflightRequest.schema.json",
  "title": "SteamTier1AdapterPreflightRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "cycle_id",
    "settlement_mode",
    "asset_count",
    "dry_run"
  ],
  "properties": {
    "cycle_id": {
      "type": "string",
      "minLength": 1
    },
    "settlement_mode": {
      "type": "string",
      "enum": [
        "deposit_per_swap",
        "vault_escrow",
        "hybrid"
      ]
    },
    "asset_count": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100000
    },
    "dry_run": {
      "type": "boolean"
    },
    "requested_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
