{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/PartnerProgramVaultExportRolloutPolicyAdminActionRequest.schema.json",
  "title": "PartnerProgramVaultExportRolloutPolicyAdminActionRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["action"],
  "properties": {
    "occurred_at": { "type": "string", "format": "date-time" },
    "action": {
      "type": "object",
      "additionalProperties": false,
      "required": ["action_type"],
      "properties": {
        "action_type": {
          "type": "string",
          "enum": ["set_maintenance_mode", "set_freeze_window", "clear_controls"]
        },
        "maintenance_mode_enabled": { "type": "boolean" },
        "maintenance_reason_code": { "type": ["string", "null"], "minLength": 1 },
        "freeze_until": { "type": ["string", "null"], "format": "date-time" },
        "freeze_reason_code": { "type": ["string", "null"], "minLength": 1 }
      }
    }
  }
}
