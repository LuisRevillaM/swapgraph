{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/WantSpec.schema.json",
  "title": "WantSpec",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "any_of"],
  "properties": {
    "type": { "type": "string", "enum": ["set"] },
    "any_of": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "title": "SpecificAssetClause",
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "platform", "asset_key"],
            "properties": {
              "type": { "type": "string", "const": "specific_asset" },
              "platform": { "type": "string", "enum": ["steam"] },
              "asset_key": { "type": "string", "minLength": 1 }
            }
          },
          {
            "title": "CategoryClause",
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "platform", "app_id", "category"],
            "properties": {
              "type": { "type": "string", "const": "category" },
              "platform": { "type": "string", "enum": ["steam"] },
              "app_id": { "type": "integer", "minimum": 0 },
              "category": { "type": "string", "minLength": 1 },
              "constraints": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        ]
      }
    }
  }
}
