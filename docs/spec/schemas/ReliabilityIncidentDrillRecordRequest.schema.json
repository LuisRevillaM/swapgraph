{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/ReliabilityIncidentDrillRecordRequest.schema.json",
  "title": "ReliabilityIncidentDrillRecordRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "drill"
  ],
  "properties": {
    "drill": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "drill_type",
        "severity",
        "outcome",
        "started_at",
        "resolved_at",
        "target_recovery_time_minutes",
        "runbook_ref",
        "evidence_refs"
      ],
      "properties": {
        "drill_type": {
          "type": "string",
          "enum": [
            "replay_recovery",
            "partial_outage",
            "signer_rotation"
          ]
        },
        "severity": {
          "type": "string",
          "enum": [
            "sev2",
            "sev3",
            "sev4"
          ]
        },
        "outcome": {
          "type": "string",
          "enum": [
            "pass",
            "fail"
          ]
        },
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "resolved_at": {
          "type": "string",
          "format": "date-time"
        },
        "target_recovery_time_minutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100000
        },
        "runbook_ref": {
          "type": "string",
          "minLength": 1
        },
        "evidence_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
