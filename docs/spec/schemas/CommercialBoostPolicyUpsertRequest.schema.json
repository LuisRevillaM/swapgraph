{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/CommercialBoostPolicyUpsertRequest.schema.json",
  "title": "CommercialBoostPolicyUpsertRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["policy"],
  "properties": {
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "enabled",
        "max_multiplier",
        "allow_safety_bypass",
        "allow_trust_bypass",
        "allow_settlement_constraint_bypass"
      ],
      "properties": {
        "enabled": { "type": "boolean" },
        "max_multiplier": { "type": "number", "minimum": 1, "maximum": 5 },
        "allow_safety_bypass": { "type": "boolean" },
        "allow_trust_bypass": { "type": "boolean" },
        "allow_settlement_constraint_bypass": { "type": "boolean" }
      }
    },
    "recorded_at": { "type": "string", "format": "date-time" }
  }
}
