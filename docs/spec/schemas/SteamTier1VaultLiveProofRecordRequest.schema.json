{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/SteamTier1VaultLiveProofRecordRequest.schema.json",
  "title": "SteamTier1VaultLiveProofRecordRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "cycle_id",
    "settlement_id",
    "receipt_id",
    "vault_holding_ids",
    "vault_reservation_ids",
    "vault_settlement_mode",
    "lifecycle_events",
    "instant_ready",
    "live_mode",
    "operator_ref",
    "evidence_refs",
    "occurred_at"
  ],
  "properties": {
    "cycle_id": {
      "type": "string",
      "minLength": 1
    },
    "settlement_id": {
      "type": "string",
      "minLength": 1
    },
    "preflight_id": {
      "type": "string",
      "minLength": 1
    },
    "receipt_id": {
      "type": "string",
      "minLength": 1
    },
    "vault_holding_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "vault_reservation_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "vault_settlement_mode": {
      "type": "string",
      "enum": [
        "vault_escrow",
        "hybrid"
      ]
    },
    "lifecycle_events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "deposit",
          "reserve",
          "release",
          "withdraw"
        ]
      }
    },
    "instant_ready": {
      "type": "boolean"
    },
    "live_mode": {
      "type": "boolean"
    },
    "operator_ref": {
      "type": "string",
      "minLength": 1
    },
    "evidence_refs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "notes": {
      "type": "string",
      "minLength": 1
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
