{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/OAuthTokenIntrospectResponse.schema.json",
  "title": "OAuthTokenIntrospectResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "active",
    "client_id",
    "reason_code",
    "scopes",
    "exp",
    "iat"
  ],
  "properties": {
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "active": {
      "type": "boolean"
    },
    "client_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "reason_code": {
      "type": [
        "string",
        "null"
      ]
    },
    "scopes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "exp": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "iat": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    }
  }
}
