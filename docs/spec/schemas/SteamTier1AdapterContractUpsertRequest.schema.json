{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/SteamTier1AdapterContractUpsertRequest.schema.json",
  "title": "SteamTier1AdapterContractUpsertRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contract"
  ],
  "properties": {
    "contract": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "adapter_version",
        "steam_app_id",
        "transfer_primitive",
        "escrow_mode",
        "settlement_modes",
        "capability_flags",
        "supported_regions",
        "max_batch_size",
        "requires_trade_hold",
        "requires_mobile_guard",
        "dry_run_only"
      ],
      "properties": {
        "adapter_version": {
          "type": "string",
          "minLength": 1
        },
        "steam_app_id": {
          "type": "integer",
          "minimum": 1
        },
        "transfer_primitive": {
          "type": "string",
          "enum": [
            "deposit_per_swap",
            "vault_escrow"
          ]
        },
        "escrow_mode": {
          "type": "string",
          "enum": [
            "direct",
            "escrow_agent"
          ]
        },
        "settlement_modes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "deposit_per_swap",
              "vault_escrow",
              "hybrid"
            ]
          }
        },
        "capability_flags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "supported_regions": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "max_batch_size": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        },
        "requires_trade_hold": {
          "type": "boolean"
        },
        "requires_mobile_guard": {
          "type": "boolean"
        },
        "dry_run_only": {
          "type": "boolean"
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
