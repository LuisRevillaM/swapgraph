{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/SwapIntent.schema.json",
  "title": "SwapIntent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "actor",
    "offer",
    "want_spec",
    "value_band",
    "trust_constraints",
    "time_constraints",
    "settlement_preferences"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["active", "cancelled"] },
    "actor": { "$ref": "ActorRef.schema.json" },

    "offer": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "AssetRef.schema.json" }
    },

    "want_spec": { "$ref": "WantSpec.schema.json" },

    "value_band": {
      "type": "object",
      "additionalProperties": false,
      "required": ["min_usd", "max_usd", "pricing_source"],
      "properties": {
        "min_usd": { "type": "number", "minimum": 0 },
        "max_usd": { "type": "number", "minimum": 0 },
        "pricing_source": { "type": "string", "minLength": 1 }
      }
    },

    "trust_constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_cycle_length", "min_counterparty_reliability"],
      "properties": {
        "max_cycle_length": { "type": "integer", "minimum": 2, "maximum": 6 },
        "min_counterparty_reliability": { "type": "number", "minimum": 0, "maximum": 5 },
        "allowed_risk_tiers": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "time_constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["expires_at"],
      "properties": {
        "expires_at": { "type": "string", "format": "date-time" },
        "urgency": { "type": "string", "enum": ["low", "normal", "high"] }
      }
    },

    "settlement_preferences": {
      "type": "object",
      "additionalProperties": false,
      "required": ["require_escrow"],
      "properties": {
        "require_escrow": { "type": "boolean" }
      }
    },

    "liquidity_provider_ref": {
      "$ref": "LiquidityProviderRef.schema.json"
    },

    "persona_ref": {
      "$ref": "BotPersonaRef.schema.json"
    },

    "liquidity_policy_ref": {
      "$ref": "LiquidityPolicyRef.schema.json"
    }
  }
}
