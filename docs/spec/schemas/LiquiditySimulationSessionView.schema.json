{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/LiquiditySimulationSessionView.schema.json",
  "title": "LiquiditySimulationSessionView",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "session_id",
    "simulation",
    "simulation_session_id",
    "owner_actor",
    "mode",
    "label",
    "seed",
    "status",
    "started_at",
    "updated_at",
    "stopped_at",
    "counters"
  ],
  "properties": {
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "simulation": {
      "type": "boolean",
      "const": true
    },
    "simulation_session_id": {
      "type": "string",
      "minLength": 1
    },
    "owner_actor": {
      "$ref": "ActorRef.schema.json"
    },
    "mode": {
      "type": "string",
      "const": "simulation"
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "seed": {
      "type": [
        "string",
        "null"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "stopped"
      ]
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "stopped_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "counters": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "sync_calls",
        "intents_synced_total",
        "active_intents_count",
        "cycles_generated_total",
        "receipts_generated_total"
      ],
      "properties": {
        "sync_calls": {
          "type": "integer",
          "minimum": 0
        },
        "intents_synced_total": {
          "type": "integer",
          "minimum": 0
        },
        "active_intents_count": {
          "type": "integer",
          "minimum": 0
        },
        "cycles_generated_total": {
          "type": "integer",
          "minimum": 0
        },
        "receipts_generated_total": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
