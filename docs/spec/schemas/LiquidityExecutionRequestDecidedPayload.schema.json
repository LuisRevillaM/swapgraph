{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/LiquidityExecutionRequestDecidedPayload.schema.json",
  "title": "LiquidityExecutionRequestDecidedPayload",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "request_id",
    "provider_id",
    "decision",
    "operator_actor",
    "decision_reason_codes",
    "decision_correlation_id",
    "decided_at"
  ],
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 1
    },
    "provider_id": {
      "type": "string",
      "minLength": 1
    },
    "decision": {
      "type": "string",
      "enum": [
        "approve",
        "reject"
      ]
    },
    "operator_actor": {
      "$ref": "ActorRef.schema.json"
    },
    "decision_reason_codes": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "decision_correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "decided_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
