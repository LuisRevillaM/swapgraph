{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/ReliabilityIncidentDrillRecordResponse.schema.json",
  "title": "ReliabilityIncidentDrillRecordResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "drill",
    "replayed"
  ],
  "properties": {
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "drill": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "drill_record_id",
        "partner_id",
        "drill_type",
        "severity",
        "outcome",
        "started_at",
        "resolved_at",
        "recovery_time_minutes",
        "target_recovery_time_minutes",
        "within_target",
        "runbook_ref",
        "evidence_refs",
        "integration_mode",
        "recorded_at"
      ],
      "properties": {
        "drill_record_id": {
          "type": "string",
          "minLength": 1
        },
        "partner_id": {
          "type": "string",
          "minLength": 1
        },
        "drill_type": {
          "type": "string",
          "enum": [
            "replay_recovery",
            "partial_outage",
            "signer_rotation"
          ]
        },
        "severity": {
          "type": "string",
          "enum": [
            "sev2",
            "sev3",
            "sev4"
          ]
        },
        "outcome": {
          "type": "string",
          "enum": [
            "pass",
            "fail"
          ]
        },
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "resolved_at": {
          "type": "string",
          "format": "date-time"
        },
        "recovery_time_minutes": {
          "type": "integer",
          "minimum": 0
        },
        "target_recovery_time_minutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100000
        },
        "within_target": {
          "type": "boolean"
        },
        "runbook_ref": {
          "type": "string",
          "minLength": 1
        },
        "evidence_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "integration_mode": {
          "type": "string",
          "enum": [
            "fixture_only"
          ]
        },
        "recorded_at": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "replayed": {
      "type": "boolean"
    }
  }
}
