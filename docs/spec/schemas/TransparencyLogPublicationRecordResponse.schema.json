{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/TransparencyLogPublicationRecordResponse.schema.json",
  "title": "TransparencyLogPublicationRecordResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "publication",
    "replayed"
  ],
  "properties": {
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "publication": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "publication_id",
        "publication_index",
        "partner_id",
        "source_type",
        "source_ref",
        "root_hash",
        "previous_root_hash",
        "previous_chain_hash",
        "chain_hash",
        "entry_count",
        "artifact_refs",
        "linked_receipt_ids",
        "linked_governance_artifact_ids",
        "integration_mode",
        "published_at"
      ],
      "properties": {
        "publication_id": {
          "type": "string",
          "minLength": 1
        },
        "publication_index": {
          "type": "integer",
          "minimum": 1
        },
        "partner_id": {
          "type": "string",
          "minLength": 1
        },
        "source_type": {
          "type": "string",
          "enum": [
            "settlement_receipts",
            "governance_rollout",
            "partner_disputes",
            "combined"
          ]
        },
        "source_ref": {
          "type": "string",
          "minLength": 1
        },
        "root_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "previous_root_hash": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[a-f0-9]{64}$"
        },
        "previous_chain_hash": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^[a-f0-9]{64}$"
        },
        "chain_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "entry_count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000000
        },
        "artifact_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "linked_receipt_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "linked_governance_artifact_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "notes": {
          "type": "string",
          "minLength": 1
        },
        "integration_mode": {
          "type": "string",
          "enum": [
            "fixture_only"
          ]
        },
        "published_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "replayed": {
      "type": "boolean"
    }
  }
}
