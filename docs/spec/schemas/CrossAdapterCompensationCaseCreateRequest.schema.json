{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/CrossAdapterCompensationCaseCreateRequest.schema.json",
  "title": "CrossAdapterCompensationCaseCreateRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "case"
  ],
  "properties": {
    "case": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "cycle_id",
        "cross_receipt_id",
        "discrepancy_code",
        "requested_by",
        "requested_amount_usd_micros"
      ],
      "properties": {
        "cycle_id": {
          "type": "string",
          "minLength": 1
        },
        "cross_receipt_id": {
          "type": "string",
          "minLength": 1
        },
        "discrepancy_code": {
          "type": "string",
          "enum": [
            "target_leg_unsettled",
            "source_leg_unsettled",
            "both_legs_unsettled"
          ]
        },
        "requested_by": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "id"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "user",
                "partner"
              ]
            },
            "id": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "requested_amount_usd_micros": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000000000000
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
