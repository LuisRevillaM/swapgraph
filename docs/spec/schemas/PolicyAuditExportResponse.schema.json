{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/PolicyAuditExportResponse.schema.json",
  "title": "PolicyAuditExportResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "correlation_id",
    "exported_at",
    "query",
    "total_filtered",
    "entries",
    "export_hash",
    "signature"
  ],
  "properties": {
    "correlation_id": { "type": "string", "minLength": 1 },
    "exported_at": { "type": "string", "format": "date-time" },
    "query": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "subject_actor_id": { "type": "string", "minLength": 1 },
        "decision": { "type": "string", "enum": ["allow", "deny"] },
        "operation_id": { "type": "string", "minLength": 1 },
        "delegation_id": { "type": "string", "minLength": 1 },
        "from_iso": { "type": "string", "format": "date-time" },
        "to_iso": { "type": "string", "format": "date-time" },
        "now_iso": { "type": "string", "format": "date-time" },
        "limit": { "type": "integer", "minimum": 1, "maximum": 200 },
        "cursor_after": { "type": "string", "minLength": 1 },
        "attestation_after": { "type": "string", "minLength": 1 }
      }
    },
    "total_filtered": { "type": "integer", "minimum": 0 },
    "entries": {
      "type": "array",
      "items": { "$ref": "PolicyAuditEntry.schema.json" }
    },
    "next_cursor": { "type": "string", "minLength": 1 },
    "attestation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cursor_after", "next_cursor", "attestation_after", "page_hash", "chain_hash"],
      "properties": {
        "cursor_after": { "type": ["string", "null"], "minLength": 1 },
        "next_cursor": { "type": ["string", "null"], "minLength": 1 },
        "attestation_after": { "type": ["string", "null"], "minLength": 1 },
        "page_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "chain_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    },
    "export_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "signature": { "$ref": "EventSignature.schema.json" }
  }
}
