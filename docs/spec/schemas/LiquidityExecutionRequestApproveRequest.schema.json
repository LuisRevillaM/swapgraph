{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://swapgraph.dev/schemas/LiquidityExecutionRequestApproveRequest.schema.json",
  "title": "LiquidityExecutionRequestApproveRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "decision"
  ],
  "properties": {
    "decision": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "operator_actor",
        "reason_codes",
        "correlation_id"
      ],
      "properties": {
        "operator_actor": {
          "$ref": "ActorRef.schema.json"
        },
        "reason_codes": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "correlation_id": {
          "type": "string",
          "minLength": 1
        },
        "approved_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
