{
  "version": 1,
  "id": "swapgraph-events-v1",
  "event_envelope_schema": "EventEnvelope.schema.json",
  "event_types": [
    { "type": "proposal.created", "payload_schema": "ProposalCreatedPayload.schema.json" },
    { "type": "proposal.expiring", "payload_schema": "ProposalExpiringPayload.schema.json" },
    { "type": "intent.reserved", "payload_schema": "IntentReservedPayload.schema.json" },
    { "type": "intent.unreserved", "payload_schema": "IntentUnreservedPayload.schema.json" },
    { "type": "cycle.state_changed", "payload_schema": "CycleStateChangedPayload.schema.json" },
    { "type": "proposal.cancelled", "payload_schema": "ProposalCancelledPayload.schema.json" },
    { "type": "cycle.failed", "payload_schema": "CycleFailedPayload.schema.json" },
    { "type": "user.reliability_changed", "payload_schema": "UserReliabilityChangedPayload.schema.json" },
    { "type": "liquidity_provider.registered", "payload_schema": "LiquidityProviderRegisteredPayload.schema.json" },
    { "type": "liquidity_provider.persona_upserted", "payload_schema": "LiquidityProviderPersonaUpsertedPayload.schema.json" },
    { "type": "liquidity.simulation_session.started", "payload_schema": "LiquiditySimulationSessionStartedPayload.schema.json" },
    { "type": "liquidity.simulation_cycle.completed", "payload_schema": "LiquiditySimulationCycleCompletedPayload.schema.json" },
    { "type": "liquidity.simulation_session.stopped", "payload_schema": "LiquiditySimulationSessionStoppedPayload.schema.json" },
    { "type": "liquidity.listing.published", "payload_schema": "LiquidityListingPublishedPayload.schema.json" },
    { "type": "liquidity.decision.recorded", "payload_schema": "LiquidityDecisionRecordedPayload.schema.json" },
    { "type": "liquidity.execution_mode.updated", "payload_schema": "LiquidityExecutionModeUpdatedPayload.schema.json" },
    { "type": "liquidity.execution_request.recorded", "payload_schema": "LiquidityExecutionRequestRecordedPayload.schema.json" },
    { "type": "liquidity.execution_request.decided", "payload_schema": "LiquidityExecutionRequestDecidedPayload.schema.json" },

    { "type": "settlement.deposit_required", "payload_schema": "SettlementDepositRequiredPayload.schema.json" },
    { "type": "settlement.deposit_confirmed", "payload_schema": "SettlementDepositConfirmedPayload.schema.json" },
    { "type": "settlement.executing", "payload_schema": "SettlementExecutingPayload.schema.json" },

    { "type": "receipt.created", "payload_schema": "ReceiptCreatedPayload.schema.json" }
  ],
  "checkpoint": {
    "format": { "last_event_id": "<event_id>" }
  }
}
